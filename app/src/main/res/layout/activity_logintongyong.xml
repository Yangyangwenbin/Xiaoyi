<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.dellll.xiaoyi.Login.Logintongyong">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#FF5000"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/denglufanhui"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@mipmap/ic_action_back"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户登录"
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:layout_gravity="center"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@mipmap/ic_edit_username" />

        <EditText
            android:id="@+id/user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@mipmap/ic_edit_password"
            />
        <EditText
            android:id="@+id/pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            />
    </LinearLayout>
    <Button
        android:id="@+id/log_but"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF5001"
        android:text="登录"
        android:textSize="25dp"
        android:textColor="#FFFFFF"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/zhuce"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="#ff5001"
            android:textSize="20dp"
            android:text="注册"
            />
        <TextView
            android:id="@+id/zhaohui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff5001"
            android:textSize="20dp"
            android:text="找回密码"
            />


    </LinearLayout>

</LinearLayout>
