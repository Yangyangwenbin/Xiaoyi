<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.dellll.xiaoyi.MainActivity">

    <FrameLayout
        android:id="@+id/fram"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

    </FrameLayout>

    <RadioGroup
        android:id="@+id/rg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rbout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="首页"
            android:textColor="@drawable/index_textcolor_pressed"
            android:drawableTop="@drawable/index_drawable_pressed"
            android:textSize="13sp" />

        <RadioButton
            android:id="@+id/rbout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:textColor="@drawable/index_textcolor_pressed"
            android:drawableTop="@drawable/type_drawable_pressed"
            android:text="分类"
            android:textSize="13sp" />

        <RadioButton
            android:id="@+id/rbout3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:textColor="@drawable/index_textcolor_pressed"
            android:drawableTop="@drawable/shop_drawable_pressed"
            android:text="购物车"
            android:textSize="13sp" />

        <RadioButton
            android:id="@+id/rbout4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:textColor="@drawable/index_textcolor_pressed"
            android:drawableTop="@drawable/mine_drawable_pressed"
            android:text="个人"
            android:textSize="13sp" />


    </RadioGroup>
</LinearLayout>
